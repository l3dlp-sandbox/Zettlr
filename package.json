        "jquery": "^3.5.0",
        "katex": "^0.11.1",
        "md5": "^2.2.1",
        "mermaid": "^8.5.0",
        "moment": "^2.25.1",
        "nspell": "^2.1.1",
        "on-change": "^2.0.1",
